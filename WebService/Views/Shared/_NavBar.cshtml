@* Media Query For (Mobile & Tab) or Pc *@

<style>
    @@media (min-width: 0px) and (max-width: 979px) {
        .pc_nav {
            display: none;
        }

        .mobile_nav {
            display: block;
        }
    }
    @@media (min-width: 980px) {
        .pc_nav {
            display: block;
        }

        .mobile_nav {
            display: none;
        }
    }
</style>


