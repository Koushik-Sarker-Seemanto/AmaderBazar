@* Style for Navbar Mobile *@

<style>

    .sidenav-top {
        height: 20%;
        width: 0;
        position: fixed;
        z-index: 101;
        top: 0;
        left: 0;
        background-color: #ffffff;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        display: block;
        text-align: center;
        opacity: .95;
    }

    .sidenav-bottom {
        height: 80%;
        width: 0;
        position: fixed;
        z-index: 101;
        top: 20%;
        left: 0;
        background-color: var(--logoGreen);
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 2%;
        opacity: .95;
    }

        .sidenav-bottom a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 12pt;
            font-weight: bold;
            color: white;
            display: block;
            transition: 0.3s;
            margin-top: 1%;
        }

    .sidenav-top .closebtn {
        position: absolute;
        top: 0;
        right: 25px;
        font-size: 36px;
        margin-left: 50px;
    }

    .mobile_nav_icon {
        font-size: 30px;
        cursor: pointer;
        background: var(--logoGreen);
        color: white;
        top: 0%;
        z-index: 100;
        padding: 15px;
        width: 100vw;
        position: fixed;
        margin-left: -50vw;
        left: 50%;
    }

    .dropdown-content {
        display: none;
        position: relative;
        margin-left: 10%;
        padding: 16px 16px;
        z-index: 1;
        margin-top: -20px;
        margin-bottom: -20px;
    }

        .dropdown-content a {
            border: white;
        }
</style>
 <link href="https://fonts.googleapis.com/css2?family=Oleo+Script+Swash+Caps:wght@700&display=swap" rel="stylesheet"> 


@* Mobile NavBar *@

@if (@TempData["Is_English"] != null)
{
    @if (@TempData["Is_English"].Equals(true))
    {
        // For English
        await Html.RenderPartialAsync("__NavBarEn");

    }
    else
    {
        // For Bangla
        await Html.RenderPartialAsync("__NavBarBn");

    }
    TempData.Keep("Is_English");
}
else
{
    // Exception
    await Html.RenderPartialAsync("__NavBarEn");
}


@* Media Query For (Mobile & Tab) or Pc *@

<style>
    @@media (min-width: 0px) and (max-width: 767px) {
        .pc_nav {
            display: none;
        }
        .mobile_nav {
            display: block;
        }
    }

    @@media (min-width: 768px) {
        .pc_nav {
            display: block;
        }

        .mobile_nav {
            display: none;
        }
        
        .searchBar {
            display: none;
        }
        .hamBurger {
            display: none;
        }
        .mobile_nav_icon {
            background: none;
        }
    }

    @@media (min-width: 0px) and (max-width: 550px) {
        .farmhut-com-bd {margin-left: 50%;}
    }
    @@media(min-width: 551px){
        .farmhut-com-bd{margin-left: 70%;}
    }
</style>


