                                    var num = @Model.Related[j].Price;
                                    $("#@Model.Related[j].Id")
                                        .text("৳ " +replaceNumbers(num.toString()));
                                    console.log(replaceNumbers(num.toString()));

                                </script>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>





