@model Models.LiveAnimalModels.LiveAnimalDetailsViewModel;
<section class="header_text sub">
    <img class="pageBanner" src="~/themes/images/banner.png" alt="New products">
    <h4><span>কনফার্ম অর্ডার</span></h4>
</section>
@if (Model.LiveAnimalDetails != null)
{

    <section class="main-content">
        <div class="row">
            <div class="span12">
                <div class="row">
                    <div class=" span4 product-box">
                        <div class="mobile-text-center" style="margin-top: 7%;">
                            <h5 style="text-align: center;">Confirm Order</h5>
                        </div>
                        <div style="margin-top: -4%;">
                            <hr>

                        </div>
                        <div style="margin-top: -4%;">
                            <hr>

                        </div>
                        <div style="margin-top: 5%;">
                            @{ await Html.RenderPartialAsync("_OrderForm", Model.Order); }
                        </div>
                    </div>
                    <div class="span5">
                        @{
                            if (Model.LiveAnimalDetails.Images != null)
                            {
                                <a href="~/images/@Model.LiveAnimalDetails.Images[0]" class="thumbnail" data-fancybox-group="group1" title="Description 1" id="big">
                                    <img alt="" src="~/images/@Model.LiveAnimalDetails.Images[0]" id="big-img">
                                </a>
                            }
                            else
                            {
                                <a href="~/static/noimage.png" class="thumbnail" data-fancybox-group="group1" title="Description 1" id="big">
                                    <img alt="" src="~/static/noimage.png" id="big-img">
                                </a>
                            }
                        }
                        @{
                            if (Model.LiveAnimalDetails.Images != null)
                            {
                                <ul class="thumbnails small">
                                    @foreach (var image in Model.LiveAnimalDetails.Images)
                                    {
                                        <li class="span1">
                                            <a class="thumbnail" data-fancybox-group="group1" title="Description 2"><img src="~/images/@image" alt=""></a>
                                        </li>
                                    }

                                </ul>
                            }
                        }
                    </div>
                    <div class="span3">
                        @if (Model.LiveAnimalDetails.TitleBn != null)
                        {
                            <div class="mobile-text-center">
                                <h4>@Model.LiveAnimalDetails.TitleBn</h4>
                            </div>
                        }
                        else
                        {
                            <div class="mobile-text-center">
                                <h4>N/A</h4>
                            </div>
                        }
                        @if (Model.LiveAnimalDetails.OriginBn != null)
                        {
                            <div class="mobile-text-center" style="margin-top: -1%;">
                                <h5>@Model.LiveAnimalDetails.OriginBn</h5>
                            </div>
                        }
                        else
                        {
                            <div class="mobile-text-center" style="margin-top: -1%;">
                                <h5>N/A</h5>
                            </div>
                        }
                        @if (Model.LiveAnimalDetails.ColorBn != null)
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">রং : </strong> <span style="font-size: medium;">@Model.LiveAnimalDetails.ColorBn</span>
                            </div>
                        }
                        else
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">রং : </strong> <span style="font-size: medium;">N/A</span>
                            </div>
                        }

                        @if (Model.LiveAnimalDetails.LocationBn != null)
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">ঠিকানা : </strong> <span style="font-size: medium;">@Model.LiveAnimalDetails.LocationBn</span>
                            </div>
                        }
                        else
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">ঠিকানা : </strong> <span style="font-size: medium;">N/A</span>
                            </div>
                        }
                        @if (!double.IsNaN(Model.LiveAnimalDetails.Height))
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">উচ্চতা : </strong> <span style="font-size: medium;" id="height">@Model.LiveAnimalDetails.Height Feet</span>
                            </div>
                            <script>
                                var num = @Model.LiveAnimalDetails.Height;
                                $("#height")
                                    .text(replaceNumbers(num.toString()) + " ফুট");
                                console.log(replaceNumbers(num.toString()));

                            </script>
                        }
                        else
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">উচ্চতা : </strong> <span style="font-size: medium;">N/A</span>
                            </div>
                        }
                        @if (!double.IsNaN(Model.LiveAnimalDetails.Weight))
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">ওজন : </strong> <span style="font-size: medium;" id="weight">@Model.LiveAnimalDetails.Weight KG</span>
                            </div>
                            <script>
                                var num = @Model.LiveAnimalDetails.Weight;
                                $("#weight")
                                    .text(replaceNumbers(num.toString()) + " কেজি");
                                console.log(replaceNumbers(num.toString()));

                            </script>
                        }
                        else
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;">ওজন : </strong> <span style="font-size: medium;">N/A</span>
                            </div>
                        }
                        @if (!double.IsNaN(Model.LiveAnimalDetails.Teeth))
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;"> দাঁত : </strong> <span style="font-size: medium;">@Model.LiveAnimalDetails.Teeth</span>
                            </div>
                            <script>
                                var num = @Model.LiveAnimalDetails.Teeth;
                                $("#weight")
                                    .text(replaceNumbers(num.toString()));
                                console.log(replaceNumbers(num.toString()));

                            </script>
                        }
                        else
                        {
                            <div class="mobile-text-center">
                                <strong style="font-size: medium;"> দাঁত : </strong> <span style="font-size: medium;">N/A</span>
                            </div>
                        }
                        @if (Model.LiveAnimalDetails.Sold != null)
                        {

                            @if (Model.LiveAnimalDetails.Sold == false)
                            {
                            }
                            else
                            {
                                <div class="mobile-text-center" style="margin-top: 15%;">
                                    <strong style="font-size: medium; color: red;">বিক্রয় হয়ে গেছে </strong>
                                </div>
                            }

                        }

                        @if (!double.IsNaN(Model.LiveAnimalDetails.Price))
                        {
                            <div class="mobile-text-center" style="margin-top: 10%;">
                                <strong style="font-size: x-large;" id="priceM">&#2547 @Model.LiveAnimalDetails.Price </strong>
                            </div>
                            <script>
                                var num = @Model.LiveAnimalDetails.Price;

                                $("#priceM")
                                    .text("৳ " + replaceNumbers(num.toString()));
                                console.log(replaceNumbers(num.toString()));

                            </script>
                        }
                        else
                        {
                            <div class="mobile-text-center" style="margin-top: 10%;">
                                <strong style="font-size: x-large;">&#2547 N/A </strong>
                            </div>
                        }
                        @* <div class="mobile-text-center" style="margin-top: 7%;"> *@
                        @*     <h5 style="text-align: center;">Confirm Order</h5> *@
                        @* </div> *@
                        @* <div style="margin-top: -4%;"> *@
                        @*     <hr> *@
                        @* *@
                        @* </div> *@
                        @* <div style="margin-top: -4%;"> *@
                        @*     <hr> *@
                        @* *@
                        @* </div> *@
                        @* *@
                        @* <div style="margin-top: 5%;"> *@
                        @*     @{ await Html.RenderPartialAsync("_OrderForm", Model.Order); } *@
                        @* </div> *@

                    </div>
                    @* DIV 9 END *@
                    
                </div>

            </div>
            <div class="row" style="margin-left: 0%; ">
                
                <div class="span9" style="margin-left: 2.5%; ">
                    <br>


                    @{
                        if (Model.Related != null)
                        {
                            await Html.RenderPartialAsync("_CarouselBn", Model);
                        }
                        else
                        {
                            <p>No Related Product!!!</p>
                        }
                    }


                </div>
            </div>
        </div>

    </section>
}
else
{
    <h1>Product Is Not Available For Order</h1>
}