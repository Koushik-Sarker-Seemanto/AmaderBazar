@model Models.Entities.Order;


@Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })

<form autocomplete="Off" method="post"  asp-action="Order" class="form-stacked">
    @Html.AntiForgeryToken()
    <div class="control-group">
        <label class="control-label"><strong>Name</strong></label>
        <div class="controls">
            <input asp-for="Name" type="text" placeholder="Enter your Name" style="width: 90%;"><br/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label"><strong>Phone Number</strong></label>
        <div class="controls">
            <input asp-for="PhoneNumber" type="text" placeholder="Enter your Phone Number" style="width: 90%;"><br/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        </div>
    </div>
    <div class="control-group">
        <label class="control-label"><strong>Address</strong></label>
        <div class="controls">
            <input type="text" asp-for="Address" placeholder="Enter your Address" style="width: 90%;">
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>
    </div>
    <div class="control-group" style="visibility: hidden">
        <label class="control-label"><strong>Address</strong></label>
        <div class="controls">
            <input type="text" asp-for="LiveAnimalId" placeholder="Enter your Address" style="width: 90%;" value="@ViewBag.LiveAnimalDetailsId">
            <span asp-validation-for="LiveAnimalId" class="text-danger"></span>

        </div>
    </div>
    @if (@ViewBag.LiveAnimalDetailsSold == false)
    {
        <div class="control-group">
            <div class="controls">
                <input type="submit" class="btn btn-inverse large" value="Confirm Order">
            </div>
        </div>
    }

</form>