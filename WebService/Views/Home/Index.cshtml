                                                    else
                                                    {
                                                        <a href='@Url.Action("Details", "LiveAnimal", new {Id = @Model.Featured[i].Id})'><img alt="" src="~/static/noimage.png"></a><br />
                                                    }
                                                }

                                                <a href='@Url.Action("Details", "LiveAnimal", new {Id = @Model.Featured[i].Id})' class="title">@Model.Featured[i].Title</a><br />
                                                <a href='@Url.Action("Details", "LiveAnimal", new {Id = @Model.Featured[i].Id})'>@Model.Featured[i].Origin</a>
                                                <p class="price">@Model.Featured[i].Price</p>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>

                            @for (int i = 1; i < Math.Ceiling(@Model.Featured.Count / 4.00); i++)
                            {
                                <div class="item">
                                    <ul class="thumbnails listing-products">

                                        @for (int j = i * 4; j < Math.Min(@Model.Featured.Count, (i * 4) + 4); j++)
                                        {
                                            <li class="span3">
                                                <div class="product-box">
                                                    <span class="sale_tag"></span>
